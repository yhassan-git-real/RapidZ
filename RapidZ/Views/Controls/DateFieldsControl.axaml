<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:RapidZ.Views.Controls"
             xmlns:customControls="using:RapidZ.Views.Controls"
             xmlns:vm="using:RapidZ.Views.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="200"
             x:Class="RapidZ.Views.Controls.DateFieldsControl"
             x:DataType="vm:MainViewModel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Month Selection -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,10" Spacing="15">
            <TextBlock Text="From:" FontWeight="Bold" VerticalAlignment="Center" />
            <customControls:YearMonthPicker Year="{Binding FromYear}" Month="{Binding FromMonth}" />
            <TextBlock Text="To:" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0,0,0" />
            <customControls:YearMonthPicker Year="{Binding ToYear}" Month="{Binding ToMonth}" />
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,15,0,5" Spacing="10">
            <Button Content="Run Query" Click="RunQuery_Click" Name="RunQueryButton"
                    Background="#007ACC" Foreground="White" Padding="15,5" />
            <Button Content="Export To Excel" Click="ExportToExcel_Click" Name="ExportToExcelButton"
                    Background="#28A745" Foreground="White" Padding="15,5" />
            <Button Content="Clear" Click="Clear_Click" Name="ClearButton"
                    Background="#6C757D" Foreground="White" Padding="15,5" />
        </StackPanel>
    </Grid>
    
</UserControl>
