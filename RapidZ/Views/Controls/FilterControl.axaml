<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RapidZ.Views.ViewModels"
             xmlns:controls="using:RapidZ.Views.Controls"
             xmlns:customControls="using:RapidZ.Views.Controls"
             xmlns:converters="using:RapidZ.Views.Converters"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
             x:Class="RapidZ.Views.Controls.FilterControl"
             x:DataType="vm:MainViewModel">

    <UserControl.Resources>
        <converters:StringEqualsConverter x:Key="StringEquals"/>
        <converters:BoolToValidationBrushConverter x:Key="BoolToValidationBrushConverter"/>
    </UserControl.Resources>

    <Border Background="#A8FFFFFF"
            CornerRadius="16"
            Padding="0"
            ClipToBounds="True">
        <ScrollViewer VerticalScrollBarVisibility="Auto" ClipToBounds="True">
            <StackPanel Margin="8" Spacing="0" ClipToBounds="True">
                <!-- Content -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4.5*" />
                        <ColumnDefinition Width="5.5*" />
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Card: Input Parameters -->
                    <Border Grid.Column="0" Classes="Card" Margin="0,0,8,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            
                            <!-- Section Header -->
                            <Border Grid.Row="0" Classes="CardHeader">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialIcons:MaterialIcon Grid.Column="0" 
                                            Kind="TableEdit"
                                            Width="22" 
                                            Height="22"
                                            Margin="2,0,8,0"
                                            Foreground="#3A5BDC"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Input Parameters" 
                                                   Classes="SectionTitle" 
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                            
                            <!-- Input Fields -->
            <StackPanel Grid.Row="1" Margin="0,5,0,0">
                <controls:InputFieldsControl />
                
                <!-- Input Parameters Validation Message -->
                <Border IsVisible="{Binding !AreInputParametersValid}"
                        Background="#FFF3E0" 
                        BorderBrush="#FF9800" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Margin="0,8,0,0" 
                        Padding="8">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <materialIcons:MaterialIcon Kind="AlertCircle" 
                                                   Foreground="#FF9800" 
                                                   Width="16" 
                                                   Height="16" 
                                                   VerticalAlignment="Center" />
                        <TextBlock Text="{Binding InputParametersValidationMessage}" 
                                  Foreground="#E65100" 
                                  FontSize="12" 
                                  FontWeight="Medium" 
                                  VerticalAlignment="Center" />
                    </StackPanel>
                </Border>
            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Right Card: Filters & Actions -->
                    <Border Grid.Column="1" Classes="Card" Margin="8,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            
                            <!-- Section Header -->
                            <Border Grid.Row="0" Classes="CardHeader">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialIcons:MaterialIcon Grid.Column="0" 
                                            Kind="FilterSettings" 
                                            Width="22" 
                                            Height="22"
                                            Margin="2,0,8,0"
                                            Foreground="#3A5BDC"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Filters &amp; Actions" 
                                                   Classes="SectionTitle" 
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                            
                            <!-- Filter Controls -->
                            <StackPanel Grid.Row="1" Spacing="8" Margin="0,4,0,0">
                                <!-- Date Range Section -->
                                <Border Classes="FilterSection" Padding="2,4">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        
                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="6" Margin="0,0,0,8">
                                            <materialIcons:MaterialIcon Kind="CalendarRange" 
                                                                 Foreground="#666666" 
                                                                 Width="16" 
                                                                 Height="16" 
                                                                 VerticalAlignment="Center" />
                                            <TextBlock Text="Date Range" 
                                                      FontWeight="Bold" FontSize="15"
                                                      FontFamily="Segoe UI" Foreground="#1E88E5"
                                                      VerticalAlignment="Center" />
                                        </StackPanel>
                                                  
                                        <Grid Grid.Row="1" Margin="0,0,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" Text="From:" VerticalAlignment="Center" 
                                                      FontSize="14" FontWeight="SemiBold"
                                                      FontFamily="Segoe UI" Foreground="#333333" 
                                                      Margin="0,0,8,0" />
                                            <customControls:YearMonthPicker Grid.Column="1" Year="{Binding FromYear}" 
                                                                           Month="{Binding FromMonth}"
                                                                           HorizontalAlignment="Left" 
                                                                           Margin="0,0,16,0" />
                                            
                                            <TextBlock Grid.Column="2" Text="To:" VerticalAlignment="Center" 
                                                      FontSize="14" FontWeight="SemiBold"
                                                      FontFamily="Segoe UI" Foreground="#333333" 
                                                      Margin="0,0,8,0" />
                                            <customControls:YearMonthPicker Grid.Column="3" Year="{Binding ToYear}" 
                                                                           Month="{Binding ToMonth}"
                                                                           HorizontalAlignment="Left" />
                                        </Grid>
                                    </Grid>
                                </Border>
                                
                                <!-- Mode Selection Section -->
                                <Border Classes="FilterSection">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="6" Margin="0,0,12,0" VerticalAlignment="Center">
                                            <materialIcons:MaterialIcon Kind="SwapHorizontal" 
                                                                 Foreground="#666666" 
                                                                 Width="16" 
                                                                 Height="16" 
                                                                 VerticalAlignment="Center" />
                                            <TextBlock Text="Mode:" FontWeight="SemiBold" 
                                                      FontSize="13" VerticalAlignment="Center" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="20" VerticalAlignment="Center">
                                            <RadioButton Content="Export" Classes="FormRadio"
                                                        IsChecked="{Binding CurrentMode, Converter={StaticResource StringEquals}, ConverterParameter=Export}" 
                                                        GroupName="Mode" />
                                            <RadioButton Content="Import" Classes="FormRadio"
                                                        IsChecked="{Binding CurrentMode, Converter={StaticResource StringEquals}, ConverterParameter=Import}" 
                                                        GroupName="Mode" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                
                                <!-- Database Objects Selection Section -->
                                <Border Classes="FilterSection">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="85" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Section Header -->
                                        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" 
                                                   Orientation="Horizontal" Spacing="6" Margin="0,0,0,12">
                                            <materialIcons:MaterialIcon Kind="Database" 
                                                             Foreground="#666666" 
                                                             Width="16" 
                                                             Height="16" 
                                                             VerticalAlignment="Center" />
                                            <TextBlock Text="Database Selection" 
                                                       Classes="SectionHeader" 
                                                       VerticalAlignment="Center" />
                                        </StackPanel>
                                        
                                        <!-- View Selection -->
                                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                                  VerticalAlignment="Center" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="13" 
                                                  Margin="0,0,12,0">
                                            <Run Text="View:" />
                                            <Run Text="*" Foreground="#E53E3E" FontWeight="Bold" />
                                        </TextBlock>
                                        <Grid Grid.Row="1" Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            
                                            <!-- AutoCompleteBox with validation border -->
                                            <Border BorderBrush="{Binding IsViewValid, Converter={StaticResource BoolToValidationBrushConverter}}"
                                                    BorderThickness="1"
                                                    CornerRadius="4">
                                                <AutoCompleteBox ItemsSource="{Binding AvailableViews}"
                                                               SelectedItem="{Binding SelectedView}"
                                                               Watermark="Search or select a view..."
                                                               HorizontalAlignment="Stretch"
                                                               Margin="0"
                                                               Height="32"
                                                               BorderThickness="0"
                                                               FilterMode="Contains"
                                                               ValueMemberBinding="{Binding DisplayName}">
                                                    <AutoCompleteBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding DisplayName}" />
                                                        </DataTemplate>
                                                    </AutoCompleteBox.ItemTemplate>
                                                </AutoCompleteBox>
                                            </Border>
                                            
                                            <!-- Validation error message -->
                                            <TextBlock Grid.Row="1"
                                                      Text="{Binding ViewValidationMessage}"
                                                      Foreground="#E53935"
                                                      FontSize="11"
                                                      FontWeight="SemiBold"
                                                      Margin="4,2,0,0"
                                                      IsVisible="{Binding !IsViewValid}" />
                                        </Grid>
                                        
                                        <!-- Stored Procedure Selection -->
                                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                                  VerticalAlignment="Center" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="13" 
                                                  Margin="0,0,12,0">
                                            <Run Text="Stored Proc:" />
                                            <Run Text="*" Foreground="#E53E3E" FontWeight="Bold" />
                                        </TextBlock>
                                        <Grid Grid.Row="2" Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            
                                            <!-- AutoCompleteBox with validation border -->
                                            <Border BorderBrush="{Binding IsStoredProcedureValid, Converter={StaticResource BoolToValidationBrushConverter}}"
                                                    BorderThickness="1"
                                                    CornerRadius="4">
                                                <AutoCompleteBox ItemsSource="{Binding AvailableStoredProcedures}"
                                                               SelectedItem="{Binding SelectedStoredProcedure}"
                                                               Watermark="Search or select a stored procedure..."
                                                               HorizontalAlignment="Stretch"
                                                               Height="32"
                                                               Margin="0"
                                                               BorderThickness="0"
                                                               FilterMode="Contains"
                                                               ValueMemberBinding="{Binding DisplayName}">
                                                    <AutoCompleteBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding DisplayName}" />
                                                        </DataTemplate>
                                                    </AutoCompleteBox.ItemTemplate>
                                                </AutoCompleteBox>
                                            </Border>
                                            
                                            <!-- Validation error message -->
                                            <TextBlock Grid.Row="1"
                                                      Text="{Binding StoredProcedureValidationMessage}"
                                                      Foreground="#E53935"
                                                      FontSize="11"
                                                      FontWeight="SemiBold"
                                                      Margin="4,2,0,0"
                                                      IsVisible="{Binding !IsStoredProcedureValid}" />
                                        </Grid>
                                    </Grid>
                                </Border>
                                
                                <!-- Action Buttons Section -->
                                <Border Classes="FilterSection">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,4,0,0">
                                        <Button Classes="PrimaryButton"
                                Click="OnGenerateReportClick" Name="GenerateReportButton"
                                IsEnabled="{Binding !IsBusy, Mode=OneWay}"
                                Width="160"
                                Height="38"
                                Padding="16,10,20,10"
                                HorizontalContentAlignment="Left">
                                            <!-- Prevent execution if validation fails -->
                                            <Button.IsEnabled>
                                                <MultiBinding Converter="{x:Static BoolConverters.And}">
                                                    <Binding Path="!IsBusy" />
                                                    <Binding Path="IsViewValid" />
                                                    <Binding Path="IsStoredProcedureValid" />
                                                    <Binding Path="AreMandatoryFieldsValid" />
                                                    <Binding Path="AreInputParametersValid" />
                                                </MultiBinding>
                                            </Button.IsEnabled>
                                            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Left">
                                                <materialIcons:MaterialIcon Kind="FileChart" 
                                                                     Foreground="White" 
                                                                     Width="14" 
                                                                     Height="14" 
                                                                     VerticalAlignment="Center" />
                                                <TextBlock Text="Generate Report" VerticalAlignment="Center" FontSize="13" FontWeight="SemiBold" Margin="2,0,0,0" />
                                            </StackPanel>
                                        </Button>
                                        <Button Classes="SecondaryButton"
                                Click="OnCancelClick" Name="CancelButton"
                                IsEnabled="True"
                                Width="100"
                                Height="38"
                                Padding="12,8,12,8"
                                HorizontalContentAlignment="Left">
                                            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Left">
                                                <materialIcons:MaterialIcon Kind="Cancel" 
                                                                     Foreground="White" 
                                                                     Width="14" 
                                                                     Height="14" 
                                                                     VerticalAlignment="Center" />
                                                <TextBlock Text="Cancel" VerticalAlignment="Center" FontSize="13" FontWeight="SemiBold" />
                                            </StackPanel>
                                        </Button>
                                        <Button Classes="ResetButton"
                                Click="OnResetClick" Name="ResetButton"
                                IsEnabled="{Binding !IsBusy}"
                                Width="100"
                                Height="38"
                                Padding="12,8,12,8"
                                HorizontalContentAlignment="Left">
                                            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Left">
                                                <materialIcons:MaterialIcon Kind="Refresh" 
                                                                     Foreground="White" 
                                                                     Width="14" 
                                                                     Height="14" 
                                                                     VerticalAlignment="Center" />
                                                <TextBlock Text="Reset" VerticalAlignment="Center" FontSize="13" FontWeight="SemiBold" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
                
                <!-- Status Panel - Directly below main cards, with full width -->
                <Grid Margin="0,16,0,8" ClipToBounds="True">
                    <controls:StatusPanelControl HorizontalAlignment="Stretch" />
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
