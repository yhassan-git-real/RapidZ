<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RapidZ.ViewModels"
             xmlns:controls="using:RapidZ.Views.Controls"
             xmlns:customControls="using:RapidZ.Controls"
             xmlns:converters="using:RapidZ.Converters"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
             x:Class="RapidZ.Views.Controls.FilterControl"
             x:DataType="vm:MainViewModel">

    <UserControl.Resources>
        <converters:StringEqualsConverter x:Key="StringEquals"/>
    </UserControl.Resources>

    <Border Background="#A8FFFFFF"
            CornerRadius="16"
            Padding="0">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" /> <!-- Content -->
                    <RowDefinition Height="*" />    <!-- Spacer -->
                    <RowDefinition Height="Auto" /> <!-- Status -->
                </Grid.RowDefinitions>
                
                <!-- Content -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Card: Input Parameters -->
                    <Border Grid.Column="0" Classes="Card">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            
                            <!-- Section Header -->
                            <Border Grid.Row="0" Classes="CardHeader">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialIcons:MaterialIcon Grid.Column="0" 
                                            Kind="TableEdit"
                                            Width="22" 
                                            Height="22"
                                            Margin="2,0,8,0"
                                            Foreground="#3A5BDC"/>
                                    <TextBlock Grid.Column="1" Text="Input Parameters" Classes="SectionTitle"/>
                                </Grid>
                            </Border>
                            
                            <!-- Input Fields -->
                            <controls:InputFieldsControl Grid.Row="1" Margin="0,5,0,0" />
                        </Grid>
                    </Border>
                    
                    <!-- Right Card: Filters & Actions -->
                    <Border Grid.Column="1" Classes="Card">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            
                            <!-- Section Header -->
                            <Border Grid.Row="0" Classes="CardHeader">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialIcons:MaterialIcon Grid.Column="0" 
                                            Kind="FilterSettings" 
                                            Width="22" 
                                            Height="22"
                                            Margin="2,0,8,0"
                                            Foreground="#3A5BDC"/>
                                    <TextBlock Grid.Column="1" Text="Filters &amp; Actions" Classes="SectionTitle"/>
                                </Grid>
                            </Border>
                            
                            <!-- Filter Controls -->
                            <StackPanel Grid.Row="1" Spacing="10" Margin="0,5,0,0">
                                <!-- Date Range Section -->
                                <Border Classes="FilterSection">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Text="Date Range" 
                                                  FontWeight="SemiBold" FontSize="13" Margin="0,0,0,6" />
                                                  
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" Text="From:" VerticalAlignment="Center" 
                                                      Margin="0,0,6,0" FontSize="12" />
                                            <customControls:YearMonthPicker Grid.Column="1" 
                                                                           Year="{Binding FromYear}" 
                                                                           Month="{Binding FromMonth}" />
                                            
                                            <TextBlock Grid.Column="2" Text="To:" VerticalAlignment="Center" 
                                                      Margin="10,0,6,0" FontSize="12" />
                                            <customControls:YearMonthPicker Grid.Column="3" 
                                                                           Year="{Binding ToYear}" 
                                                                           Month="{Binding ToMonth}" />
                                        </Grid>
                                    </Grid>
                                </Border>
                                
                                <!-- Mode Selection Section -->
                                <Border Classes="FilterSection">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Mode:" FontWeight="SemiBold" 
                                                  FontSize="13" Margin="0,0,12,0" VerticalAlignment="Center" />
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="20" VerticalAlignment="Center">
                                            <RadioButton Content="Export" Classes="FormRadio"
                                                        IsChecked="{Binding ExportDataFilter.Mode, Converter={StaticResource StringEquals}, ConverterParameter=Export}" 
                                                        GroupName="Mode" />
                                            <RadioButton Content="Import" Classes="FormRadio"
                                                        IsChecked="{Binding ExportDataFilter.Mode, Converter={StaticResource StringEquals}, ConverterParameter=Import}" 
                                                        GroupName="Mode" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                
                                <!-- Action Buttons Section -->
                                <Border Classes="FilterSection">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="Generate Report" Classes="PrimaryButton"
                                                Command="{Binding ExportToExcelCommand}" 
                                                Width="140" />
                                        <Button Content="Reset" Classes="SecondaryButton"
                                                Command="{Binding ClearFiltersCommand}"
                                                Width="80" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
                
                <!-- Status Bar -->
                <Grid Grid.Row="2" Margin="0,16,0,0" VerticalAlignment="Bottom">
                    <Border Background="#D8FFFFFF" CornerRadius="8" Padding="12,8">
                        <TextBlock Text="{Binding StatusMessage}" 
                                   Foreground="{Binding StatusMessageColor}"
                                   FontSize="12" 
                                   FontWeight="Medium"
                                   HorizontalAlignment="Center" />
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Border>
</UserControl>
