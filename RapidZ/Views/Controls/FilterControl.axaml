<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RapidZ.Views.ViewModels"
             xmlns:controls="using:RapidZ.Views.Controls"
             xmlns:customControls="using:RapidZ.Views.Controls"
             xmlns:converters="using:RapidZ.Views.Converters"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
             x:Class="RapidZ.Views.Controls.FilterControl"
             x:DataType="vm:MainViewModel">

    <UserControl.Resources>
        <converters:StringEqualsConverter x:Key="StringEquals"/>
    </UserControl.Resources>

    <Border Background="#A8FFFFFF"
            CornerRadius="16"
            Padding="0">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" /> <!-- Content -->
                    <RowDefinition Height="*" />    <!-- Spacer -->
                    <RowDefinition Height="Auto" /> <!-- Status -->
                </Grid.RowDefinitions>
                
                <!-- Content -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Card: Input Parameters -->
                    <Border Grid.Column="0" Classes="Card">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            
                            <!-- Section Header -->
                            <Border Grid.Row="0" Classes="CardHeader">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialIcons:MaterialIcon Grid.Column="0" 
                                            Kind="TableEdit"
                                            Width="22" 
                                            Height="22"
                                            Margin="2,0,8,0"
                                            Foreground="#3A5BDC"/>
                                    <TextBlock Grid.Column="1" Text="Input Parameters" Classes="SectionTitle"/>
                                </Grid>
                            </Border>
                            
                            <!-- Input Fields -->
                            <controls:InputFieldsControl Grid.Row="1" Margin="0,5,0,0" />
                        </Grid>
                    </Border>
                    
                    <!-- Right Card: Filters & Actions -->
                    <Border Grid.Column="1" Classes="Card">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            
                            <!-- Section Header -->
                            <Border Grid.Row="0" Classes="CardHeader">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialIcons:MaterialIcon Grid.Column="0" 
                                            Kind="FilterSettings" 
                                            Width="22" 
                                            Height="22"
                                            Margin="2,0,8,0"
                                            Foreground="#3A5BDC"/>
                                    <TextBlock Grid.Column="1" Text="Filters &amp; Actions" Classes="SectionTitle"/>
                                </Grid>
                            </Border>
                            
                            <!-- Filter Controls -->
                            <StackPanel Grid.Row="1" Spacing="10" Margin="0,5,0,0">
                                <!-- Date Range Section -->
                                <Border Classes="FilterSection" Padding="2,4">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Text="Date Range" 
                                                  FontWeight="Bold" FontSize="15" Margin="0,0,0,8"
                                                  FontFamily="Segoe UI" Foreground="#1E88E5" />
                                                  
                                        <Grid Grid.Row="1" Margin="0,0,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" MinWidth="160" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" MinWidth="160" />
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" Text="From:" VerticalAlignment="Center" 
                                                      Margin="0,0,8,0" FontSize="14" FontWeight="SemiBold"
                                                      FontFamily="Segoe UI" Foreground="#333333" />
                                            <customControls:YearMonthPicker Grid.Column="1" 
                                                                           Year="{Binding FromYear}" 
                                                                           Month="{Binding FromMonth}"
                                                                           HorizontalAlignment="Left" />
                                            
                                            <TextBlock Grid.Column="2" Text="To:" VerticalAlignment="Center" 
                                                      Margin="16,0,8,0" FontSize="14" FontWeight="SemiBold"
                                                      FontFamily="Segoe UI" Foreground="#333333" />
                                            <customControls:YearMonthPicker Grid.Column="3" 
                                                                           Year="{Binding ToYear}" 
                                                                           Month="{Binding ToMonth}"
                                                                           HorizontalAlignment="Left" />
                                        </Grid>
                                    </Grid>
                                </Border>
                                
                                <!-- Mode Selection Section -->
                                <Border Classes="FilterSection">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Mode:" FontWeight="SemiBold" 
                                                  FontSize="13" Margin="0,0,12,0" VerticalAlignment="Center" />
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="20" VerticalAlignment="Center">
                                            <RadioButton Content="Export" Classes="FormRadio"
                                                        IsChecked="{Binding CurrentMode, Converter={StaticResource StringEquals}, ConverterParameter=Export}" 
                                                        GroupName="Mode" />
                                            <RadioButton Content="Import" Classes="FormRadio"
                                                        IsChecked="{Binding CurrentMode, Converter={StaticResource StringEquals}, ConverterParameter=Import}" 
                                                        GroupName="Mode" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                
                                <!-- Database Objects Selection Section -->
                                <Border Classes="FilterSection">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="85" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Section Header -->
                                        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                                                  Text="Database Selection" 
                                                  Classes="SectionHeader"
                                                  Margin="0,0,0,12" />
                                        
                                        <!-- View Selection -->
                                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                                  Text="View:" 
                                                  VerticalAlignment="Center" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="13" 
                                                  Margin="0,0,12,0" />
                                        <ComboBox Grid.Row="1" Grid.Column="1" 
                                                 ItemsSource="{Binding AvailableViews}"
                                                 SelectedItem="{Binding SelectedView}"
                                                 PlaceholderText="Select a view..."
                                                 HorizontalAlignment="Stretch"
                                                 Margin="0,0,0,8"
                                                 Height="32">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding DisplayName}" />
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        
                                        <!-- Stored Procedure Selection -->
                                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                                  Text="Stored Proc:" 
                                                  VerticalAlignment="Center" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="13" 
                                                  Margin="0,0,12,0" />
                                        <ComboBox Grid.Row="2" Grid.Column="1" 
                                                 ItemsSource="{Binding AvailableStoredProcedures}"
                                                 SelectedItem="{Binding SelectedStoredProcedure}"
                                                 PlaceholderText="Select a stored procedure..."
                                                 HorizontalAlignment="Stretch"
                                                 Height="32">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding DisplayName}" />
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </Grid>
                                </Border>
                                
                                <!-- Action Buttons Section -->
                                <Border Classes="FilterSection">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                                        <Button Content="Generate Report" Classes="PrimaryButton"
                                                Click="OnGenerateReportClick" Name="GenerateReportButton"
                                                IsEnabled="{Binding !IsBusy}"
                                                Width="140" />
                                        <Button Content="Cancel" Classes="SecondaryButton"
                                                Click="OnCancelClick" Name="CancelButton"
                                                IsEnabled="{Binding IsBusy}"
                                                Width="80" />
                                        <Button Content="Reset" Classes="SecondaryButton"
                                                Click="OnResetClick" Name="ResetButton"
                                                IsEnabled="{Binding !IsBusy}"
                                                Width="80" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
                
                <!-- Status Panel -->
                <Grid Grid.Row="2" Margin="0,16,0,0" VerticalAlignment="Bottom">
                    <controls:StatusPanel 
                        IsVisible="True"
                        StatusType="{Binding StatusType}"
                        StatusTitle="{Binding StatusTitle, FallbackValue=Ready}"
                        Message="{Binding StatusMessage, FallbackValue=System is ready for processing}"
                        Details="{Binding StatusDetails}"
                        StatusHasAction="{Binding StatusHasAction}"
                        ActionText="{Binding StatusActionText}"
                        StatusActionCommand="{Binding StatusActionCommand}" />
                </Grid>
            </Grid>
        </ScrollViewer>
    </Border>
</UserControl>
