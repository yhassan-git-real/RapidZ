<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RapidZ.Views.ViewModels"
             xmlns:converters="using:RapidZ.Views.Converters"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="50"
             x:Class="RapidZ.Views.Controls.FooterControl"
             x:DataType="vm:MainViewModel">

    <UserControl.Resources>
        <!-- Boolean to color converter for connection status -->
        <converters:BoolToConnectionColorConverter x:Key="BoolToColorConverter" />
        <converters:BoolToStatusTextConverter x:Key="BoolToStatusTextConverter" />
    </UserControl.Resources>

    <Grid>
        <Border Background="#25000000" CornerRadius="8" Padding="4,3" BoxShadow="0 1 3 0 #30000000">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <!-- Copyright Info -->
                <TextBlock Grid.Column="0" Text="Â© 2025 RapidZ" 
                          Foreground="#E0FFFF" FontSize="11" FontWeight="SemiBold"
                          HorizontalAlignment="Left" VerticalAlignment="Center"
                          Margin="6,0,0,0" />
                
                <!-- Status Message (center) -->
                <TextBlock Grid.Column="1" 
                          Text="{Binding StatusMessage}" 
                          Foreground="#E0FFFF" 
                          FontSize="11" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center" 
                          Margin="4,0" />
                
                <!-- DB Connection Status -->
                <Border Grid.Column="2" 
                       Background="#35000000" 
                       CornerRadius="6" 
                       Padding="8,3" 
                       Margin="0,0,6,0">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <!-- Connection Status Indicator -->
                        <Border Width="8" Height="8" CornerRadius="4"
                               Background="{Binding ConnectionInfo.IsConnected, Converter={StaticResource BoolToColorConverter}}"
                               BoxShadow="0 0 3 0 #80000000">
                            <ToolTip.Tip>
                                <StackPanel Margin="4">
                                    <TextBlock Text="{Binding ConnectionInfo.IsConnected, Converter={StaticResource BoolToStatusTextConverter}}" 
                                              FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding ConnectionInfo.LastConnectionTime, StringFormat='Last connected: {0}'}" 
                                              Margin="0,4,0,0" />
                                </StackPanel>
                            </ToolTip.Tip>
                        </Border>
                        
                        <!-- Database Server -->
                        <StackPanel Orientation="Horizontal" Spacing="2">
                            <materialIcons:MaterialIcon Kind="ServerNetwork" 
                                                      Width="12" Height="12" 
                                                      Foreground="#80DEEA" />
                            <TextBlock Text="{Binding ConnectionInfo.ServerName}" 
                                      Foreground="#C8E6FF" 
                                      FontSize="10" 
                                      FontFamily="Segoe UI" 
                                      FontWeight="SemiBold"
                                      VerticalAlignment="Center" />
                        </StackPanel>
                        
                        <!-- Separator -->
                        <TextBlock Text="/" Foreground="#90A4AE" FontSize="10" VerticalAlignment="Center" />
                        
                        <!-- Database Name -->
                        <TextBlock Text="{Binding ConnectionInfo.DatabaseName}" 
                                  Foreground="#E0F2F1" 
                                  FontSize="10" 
                                  FontFamily="Segoe UI" 
                                  VerticalAlignment="Center" />
                                  
                        <!-- Separator -->
                        <TextBlock Text="/" Foreground="#90A4AE" FontSize="10" VerticalAlignment="Center" />

                        <!-- User Name -->
                        <StackPanel Orientation="Horizontal" Spacing="2">
                            <materialIcons:MaterialIcon Kind="AccountCircle" 
                                                      Width="12" Height="12" 
                                                      Foreground="#FFECB3" />
                            <TextBlock Text="{Binding ConnectionInfo.UserName}" 
                                      Foreground="#FFF8E1" 
                                      FontSize="10" 
                                      FontFamily="Segoe UI" 
                                      VerticalAlignment="Center" />
                        </StackPanel>
                        
                        <!-- Separator -->
                        <TextBlock Text="/" Foreground="#90A4AE" FontSize="10" VerticalAlignment="Center" />
                        
                        <!-- Response Time -->
                        <StackPanel Orientation="Horizontal" Spacing="2">
                            <materialIcons:MaterialIcon Kind="Clock" 
                                                      Width="12" Height="12" 
                                                      Foreground="#FFCC80" />
                            <TextBlock Text="{Binding ConnectionInfo.ResponseTime}" 
                                      Foreground="#FFE0B2" 
                                      FontSize="10" 
                                      FontFamily="Segoe UI" 
                                      VerticalAlignment="Center" />
                            <TextBlock Text="ms" 
                                      Foreground="#FFE0B2" 
                                      FontSize="9" 
                                      FontFamily="Segoe UI" 
                                      VerticalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
