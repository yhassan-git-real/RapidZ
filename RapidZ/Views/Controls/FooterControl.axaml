<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RapidZ.Views.ViewModels"
             xmlns:converters="using:RapidZ.Views.Converters"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="50"
             x:Class="RapidZ.Views.Controls.FooterControl"
             x:DataType="vm:MainViewModel">

    <UserControl.Resources>
        <!-- Boolean to color converter for connection status -->
        <converters:BoolToConnectionColorConverter x:Key="BoolToColorConverter" />
        <converters:BoolToStatusTextConverter x:Key="BoolToStatusTextConverter" />
    </UserControl.Resources>

    <Grid>
        <Border Background="#25000000" CornerRadius="8" Padding="6,4" BoxShadow="0 1 3 0 #30000000">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <!-- Copyright Info -->
                <TextBlock Grid.Column="0" Text="Â© 2025 RapidZ" 
                          Foreground="#E0FFFF" FontSize="12" FontWeight="SemiBold"
                          HorizontalAlignment="Center" VerticalAlignment="Center" />
                
                <!-- DB Connection Status -->
                <Border Grid.Column="1" 
                       Background="#35000000" 
                       CornerRadius="6" 
                       Padding="10,4" 
                       Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <!-- Connection Status Indicator -->
                        <Border Width="10" Height="10" CornerRadius="5"
                               Background="{Binding ConnectionInfo.IsConnected, Converter={StaticResource BoolToColorConverter}}"
                               BoxShadow="0 0 3 0 #80000000">
                            <ToolTip.Tip>
                                <TextBlock Text="{Binding ConnectionInfo.IsConnected, Converter={StaticResource BoolToStatusTextConverter}}" />
                            </ToolTip.Tip>
                        </Border>
                        
                        <!-- Database Server -->
                        <StackPanel Orientation="Horizontal" Spacing="2">
                            <materialIcons:MaterialIcon Kind="ServerNetwork" 
                                                      Width="14" Height="14" 
                                                      Foreground="#80DEEA" />
                            <TextBlock Text="{Binding ConnectionInfo.ServerName}" 
                                      Foreground="#C8E6FF" 
                                      FontSize="11" 
                                      FontFamily="Segoe UI" 
                                      FontWeight="SemiBold"
                                      VerticalAlignment="Center" />
                        </StackPanel>
                        
                        <!-- Separator -->
                        <TextBlock Text="/" Foreground="#90A4AE" FontSize="11" VerticalAlignment="Center" />
                        
                        <!-- Database Name -->
                        <StackPanel Orientation="Horizontal" Spacing="2">
                            <materialIcons:MaterialIcon Kind="Database" 
                                                      Width="14" Height="14" 
                                                      Foreground="#B2DFDB" />
                            <TextBlock Text="{Binding ConnectionInfo.DatabaseName}" 
                                      Foreground="#E0F2F1" 
                                      FontSize="11" 
                                      FontFamily="Segoe UI" 
                                      VerticalAlignment="Center" />
                        </StackPanel>
                        
                        <!-- Separator -->
                        <TextBlock Text="/" Foreground="#90A4AE" FontSize="11" VerticalAlignment="Center" />
                        
                        <!-- User Name -->
                        <StackPanel Orientation="Horizontal" Spacing="2">
                            <materialIcons:MaterialIcon Kind="AccountCircle" 
                                                      Width="14" Height="14" 
                                                      Foreground="#FFECB3" />
                            <TextBlock Text="{Binding ConnectionInfo.UserName}" 
                                      Foreground="#FFF8E1" 
                                      FontSize="11" 
                                      FontFamily="Segoe UI" 
                                      VerticalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
