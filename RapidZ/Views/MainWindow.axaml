<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:RapidZ.Views.ViewModels"
        xmlns:controls="clr-namespace:RapidZ.Views.Controls"
        xmlns:material="using:Material.Icons.Avalonia"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="RapidZ.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="RapidZ - TradeData | Indian Edition"
        MinWidth="960" MinHeight="580"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/Images/favicon.ico">

    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <Window.Styles>
        <StyleInclude Source="/Assets/Styles/GlobalStyles.axaml"/>
    </Window.Styles>

    <Window.Background>
        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
            <GradientStop Color="#3045CF" Offset="0.0" />
            <GradientStop Color="#5062E3" Offset="0.2" />
            <GradientStop Color="#7B8AF7" Offset="0.5" />
            <GradientStop Color="#F89DE8" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="10,5,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="32" /> <!-- Header - with minimum height -->
            <RowDefinition Height="*" />     <!-- Content -->
            <RowDefinition Height="Auto" />  <!-- Footer -->
        </Grid.RowDefinitions>
        
        <!-- Enhanced header with icons -->
        <Grid Grid.Row="0" Margin="16,4,16,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <!-- Left side: App Title with Icon -->
             <StackPanel Grid.Column="0" Classes="AppHeader" HorizontalAlignment="Left">
                 <material:MaterialIcon Kind="TrendingUp" 
                                        Foreground="White" 
                                        Width="24" 
                                        Height="24" 
                                        VerticalAlignment="Center"
                                        Effect="drop-shadow(0 1 3 #50000000)" />
                 <!-- App Title with Enhanced Styling -->
                 <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                     <TextBlock Text="RapidZ - TradeData" 
                               Classes="HeaderText" 
                               VerticalAlignment="Center"
                               Effect="drop-shadow(0 1 6 #60000000)" />
                     
                     <!-- Elegant Separator -->
                     <Border Background="White" 
                             Width="2" 
                             Height="18" 
                             CornerRadius="1" 
                             VerticalAlignment="Center"
                             Opacity="0.7"
                             Effect="drop-shadow(0 1 2 #40000000)" />
                     
                     <!-- Edition Badge -->
                     <Border Background="#FFD700" 
                             CornerRadius="12" 
                             Padding="8,3" 
                             VerticalAlignment="Center"
                             Effect="drop-shadow(0 2 4 #40000000)">
                         <TextBlock Text="Indian Edition" 
                                   FontSize="12" 
                                   FontWeight="SemiBold" 
                                   Foreground="#2C3E50" 
                                   VerticalAlignment="Center" />
                     </Border>
                 </StackPanel>
             </StackPanel>
             
             <!-- Right side: Action Icons -->
             <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                 <material:MaterialIcon Kind="Analytics" 
                                         Foreground="White" 
                                         Width="20" 
                                         Height="20" 
                                         VerticalAlignment="Center"
                                         Effect="drop-shadow(0 1 3 #50000000)"
                                         ToolTip.Tip="Analytics" />
                 <material:MaterialIcon Kind="Settings" 
                                       Foreground="White" 
                                       Width="20" 
                                       Height="20" 
                                       VerticalAlignment="Center"
                                       Effect="drop-shadow(0 1 3 #50000000)"
                                       ToolTip.Tip="Settings" />
             </StackPanel>
        </Grid>
        
        <!-- Separator Line - Enhanced -->
        <Border Grid.Row="0" VerticalAlignment="Bottom" Height="1" Margin="0,8,0,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#30FFFFFF" Offset="0.0" />
                    <GradientStop Color="#FFFFFF" Offset="0.5" />
                    <GradientStop Color="#30FFFFFF" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Row="1" 
               Background="#FFFFFF" 
               CornerRadius="8" 
               Margin="0,8,0,8" 
               Padding="0">
            <controls:FilterControl DataContext="{Binding}" Margin="0,12,0,0" />
        </Border>
                               
        <!-- Footer -->
        <controls:FooterControl Grid.Row="2" 
                              DataContext="{Binding}" 
                              Margin="0,12,0,0" 
                              HorizontalAlignment="Stretch" />
    </Grid>
</Window>
