<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:RapidZ.ViewModels"
        xmlns:controls="clr-namespace:RapidZ.Views.Controls"
        xmlns:material="using:Material.Icons.Avalonia"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="RapidZ.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="RapidZ - TradeData Manager"
        MinWidth="960" MinHeight="580"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <Window.Styles>
        <StyleInclude Source="/Assets/Styles/GlobalStyles.axaml"/>
    </Window.Styles>

    <Window.Background>
        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
            <GradientStop Color="#3045CF" Offset="0.0" />
            <GradientStop Color="#5062E3" Offset="0.2" />
            <GradientStop Color="#7B8AF7" Offset="0.5" />
            <GradientStop Color="#F89DE8" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="12,6,12,12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="35" /> <!-- Header - with minimum height -->
            <RowDefinition Height="*" />     <!-- Content -->
            <RowDefinition Height="Auto" />  <!-- Footer -->
        </Grid.RowDefinitions>
        
        <!-- Simple header -->
        <StackPanel Grid.Row="0" Classes="AppHeader" HorizontalAlignment="Left" Margin="16,4,0,0">
            <!-- App Title -->
            <TextBlock Text="RapidZ - TradeData Manager" 
                      Classes="HeaderText" 
                      VerticalAlignment="Center"
                      Effect="drop-shadow(0 1 6 #60000000)" />
        </StackPanel>
        
        <!-- Separator Line - Enhanced -->
        <Border Grid.Row="0" VerticalAlignment="Bottom" Height="1" Margin="0,32,0,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#30FFFFFF" Offset="0.0" />
                    <GradientStop Color="#FFFFFF" Offset="0.5" />
                    <GradientStop Color="#30FFFFFF" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- Main Content Area with top margin for spacing -->
        <controls:FilterControl Grid.Row="1" 
                               DataContext="{Binding}" Margin="0,20,0,0" />
                               
        <!-- Footer -->
        <controls:FooterControl Grid.Row="2" 
                              DataContext="{Binding}" 
                              Margin="0,16,0,0" 
                              HorizontalAlignment="Stretch" />

        <!-- Loading Overlay -->
        <controls:LoadingControl Grid.Row="0" Grid.RowSpan="3"
                                DataContext="{Binding}" />
    </Grid>
</Window>
